<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Skills</title>
  </head>
  <body>
    <h1>My Skills</h1>
    <a href="/skills/new">Create Skills</a>
    <ul>
      <% skills.forEach(function(t) { %>
      <a href="/skills/<%= t.id%>"
        ><li><%= t.skill %> - <%= t.skill ? 'done' : 'not done' %></li>
        </a>
      <li>
        <form
          action="/skills/<%= t.id %>?_method=DELETE"
          class="delete-form"
          method="POST">
          <button type="submit">DELETE</button>
        </form>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
